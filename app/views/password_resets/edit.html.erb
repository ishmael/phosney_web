<div class="header cr-top ">
	<img class="tag" src="/images/logo_top.png" alt="Phosney" />
	<h4 ><%=  I18n.t('layout.application.tag')  %></h4>
	<ul>
		<li><%= link_to 'Login', login_path  , {:class => "cr-top"} %></li>
		<li><%= link_to I18n.t('layout.users.register'), new_account_path, {:class => " cr-top"}  %></li>
		<li> <%= link_to I18n.t('layout.users.recoverpassword'), new_password_reset_path , {:class => "cr-top"} %></li>
	</ul>
</div>
<%form_for @user , :html => { :class => "basic register"}, :url => password_reset_path, :method => :put do |f|  %>
<div class="basic cr-bottom">
<% if not flash[:notice].blank? %>
  		<div class="msg msg-error">
			<div><%= flash[:notice] %></div>
		</div>
  <% end %>
<%=  I18n.t('layout.application.newpassword')  %>
<dl>
	
	<dt><%= f.label :password %></dt>
	<dd><%= f.password_field :password ,:class=>'txt' %></dd>	
	<dt><%= f.label :password_confirmation %></dt>
	<dd><%= f.password_field :password_confirmation ,:class=>'txt' %></dd>	
	<dd class="submit">
		<div>
		<%= f.submit I18n.t('layout.users.changesubmit') ,:class => 'phosney-button cr-all' %> 
		</div>
	</dd>
</dl>
</div>
<% end %>

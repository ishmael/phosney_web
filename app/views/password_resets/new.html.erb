<div class="header">
	<img src="/images/logo_top.png" alt="Phosney" />
	<h4><%=  I18n.t('layout.application.tag')  %></h4>
	<ul>
		<li><%= link_to 'Login', login_path  %></li><!-- .active for active tab -->
		<li><%= link_to I18n.t('layout.users.register'), new_account_path %></li>
		<li> <%= link_to I18n.t('layout.users.recoverpassword'), new_password_reset_path, {:class => "active"} %></li>
	</ul>
</div>
<% form_tag password_resets_path ,  :class => "basic" do  %>
<div class="inner-form">
<% if not flash[:notice].blank? %>
  		<div class="msg msg-error">
			<div><%= flash[:notice] %></div>
		</div>
  <% end %>
<dl>
	<%= I18n.t('layout.users.recoverpasswordtag') %>
	<dt><label class="label2">Email:</label></dt>
	<dd><%= text_field_tag :email , nil,:class => 'txt' %></dd>	
	<dd class="submit">
		<div>
		<%= submit_tag  I18n.t('layout.users.resetsubmit'),:class => 'button' %> 
		</div>
	</dd>
</dl>
</div>
<% end %>
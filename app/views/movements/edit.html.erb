<div id="movements_div" class="box box-first box-50 altbox"><!-- .altbox for alternative box's color -->
	<div class="boxin">
		<div class="header">
			<h3><%=  I18n.t('layout.movements.title') %></h3>
		</div>	
		<% form_for([@account,@movement],:html =>{:class => 'basic'}) do |f| %>
		<div  class="inner-form">
			<dl>    
				<%= render :partial => "form", :object => f %>
					<dd class="submit">
						<div>
						<%= f.submit I18n.t('layout.application.update'),:class => 'button' %> <%= I18n.t('layout.application.or') %> 
						<%= link_to I18n.t('layout.application.cancel'), polymorphic_path([@account,:movements]) %>
						</div>
					</dd>
			</dl>				
		</div>
		<% end %>
	</div>
</div>
<div class="box box-100 altbox"><!-- .altbox for alternative box's color -->
	<div class="boxin">
		<div class="header">
			<h3><%=  I18n.t('layout.movements.map') %></h3>	
		</div>
		<div class="content"> 
			<%= @map.div(:width => 988, :height => 400) %>			
		</div>
 	</div>
</div>
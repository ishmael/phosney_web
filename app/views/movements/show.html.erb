<% content_for :javascript_bottom do %>
	<% if (not @movement.lng.blank?) and (not @movement.lat.blank?) %>
  	<%= GMap.header %>
	<%= @map.to_html %>
	<% end%>
<% end %>
<div id="movements_div" class="box box-first box-50 altbox"><!-- .altbox for alternative box's color -->
	<div class="boxin">
		<div class="header">
			<h3><%=  I18n.t('layout.movements.title') %></h3>
			<% if @account.allow_edit == '1' %>	
			<%= link_to I18n.t('layout.application.edit'),edit_polymorphic_path([@account,@movement]),:class => 'button' %>
			<% end %>			
		</div>	
		<div  class="inner-form">
			<div class="basic">			
			<dl>
			  <dt><%= I18n.t('layout.movements.description') %></dt>
			  <dd><%=h @movement.description %></dd>
			  <dt><%= I18n.t('layout.movements.amount')  %></dt>
			  <dd><%= @movement.amount.format %></dd>
			  <dt><%= I18n.t('layout.movements.movdate') %></dt>
			  <dd><%=h @movement.movdate.to_date  %></dd>	
			  <dt><%= I18n.t('layout.movements.category') %></dt>
			  <dd><%=h @movement.category_name %></dd>
			  <dt><%= I18n.t('layout.movements.tags') %></dt>
			  <dd><%=h @movement.tag_list  %></dd>	
    		  <dd class="submit">
					<div>
					<%= link_to I18n.t('layout.application.back'), :back %>
					</div>
				</dd>	   
			</dl>			
			</div>	
		</div>
	</div>
</div>
<% if (not @movement.lng.blank?) and (not @movement.lat.blank?) %>
<div class="box box-100 altbox"><!-- .altbox for alternative box's color -->
	<div class="boxin">
		<div class="header">
			<h3><%=  I18n.t('layout.movements.map') %></h3>	
		</div>
		<div class="content"> 
			<%= @map.div(:width => 988, :height => 400) %>			
		</div>
 	</div>
</div>
<% end %>
        <div class="tabbertab">
            <h2>Movements</h2>
            <div class="container1">
<h1>New movement</h1>

<% form_for([@bankaccount,@movement]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.radio_button :mov_type,"-1" %>Debit
    <%= f.radio_button :mov_type,"1" %>Credit
  </p>
  <p>
    <%= f.label :movdate %><br />
    <%= f.date_select :movdate %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', bankaccount_movements_path(@bankaccount) %>
            </div><!--/end .container1-->
        </div><!--/end .tabbertab-->
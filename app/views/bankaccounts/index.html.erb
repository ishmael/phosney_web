<%= javascript_include_tag "FusionCharts"%>

        <div class="tabbertab">
            <h2>Account</h2>
            <div class="container1">

<table class="broom_table">
 <thead>
  <tr>
    <th scope="col">Name</th>  
    <th scope="col">Bank</th>
    <th scope="col">Balance</th>    
    <th scope="col"></th>
  </tr>
 </thead>
<% @bankaccounts.each do |bankaccount| %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h bankaccount.name %></td>
    <td><%=h bankaccount.bank %></td>
    <td><%=h bankaccount.balance.nil? ? 0 : bankaccount.balance %></td>
    <td>
    <%= link_to 'Edit', edit_bankaccount_path(bankaccount),:class => 'table_edit' %>
    <%= link_to 'Destroy', bankaccount, :confirm => 'Are you sure?', :method => :delete ,:class => 'table_delete'%></td>
  </tr>
<% end %>
<tr>
<td></td>
<td>Total</td>
<td><%= @bankaccounts.inject(0) { |result,element| result + element['balance'].to_f } %></td>
<td></td>
</tr>
</table>

<br />

<%= link_to 'New Account', new_bankaccount_path %>

<% str_xml = render "fusioncharts/movements_by_month.builder",:layout => false,:expending_data => @expending_data
    render_chart '/FusionCharts/FCF_Pie3D.swf', '', str_xml, 'FactorySum', 350, 250, false, false do-%> 
<% end-%> 
</div><!--/end .container2-->
   </div><!--/end .tabbertab-->
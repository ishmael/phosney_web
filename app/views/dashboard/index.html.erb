<%= javascript_include_tag "FusionCharts"%>
<div id="dashboard" >
    		<div class="box box-first box-50 altbox "><!-- .altbox for alternative box's color -->
				<div class="boxin">
					<div class="header">
						<h3><%=  I18n.t('layout.bankaccounts.tagline') %></h3>
					</div>
					<div class="content">
						<table cellspacing="0">
							<thead>
								<tr>
									<th class="first"><%=  I18n.t('layout.bankaccounts.name') %></th>
									<td class="last"><%=  I18n.t('layout.bankaccounts.accountbalance') %></td>
								</tr>
							</thead>
							<tbody>
							<% @accounts.each_with_index do |account,i| %>	
								<tr class="<% if i == 0  %>first<% else %><%= cycle('even', 'odd') %><% end%>" >
									<th class="first"><%= link_to account.name,polymorphic_path([account,:movements]) %></th>
									<td class="tr"><%= format_currency(account.balance) %></td>
								</tr>
							<% end %>	
							<% %>
							<% currencies(@accounts).each do |currency_type|   %>
								<tr>
									<th class="first"><%=  I18n.t('layout.bankaccounts.total') %>(<%= currency_type %>)</th>
									<td class="tr"><%= format_currency(@accounts.find_all{|item| item.currency == currency_type }.sum { |citem| citem.balance }) %></td>
								</tr>
							<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
				<div class="box box-last box-50  altbox"><!-- .altbox for alternative box's color -->
					<div class="boxin">
						<div class="header">
							<h3> <%=  I18n.t('layout.movements.tag5line') %></h3>
						</div>
						<div class="content">
							<table cellspacing="0">
								<thead>
									<tr>
										<th class="first"> <%=  I18n.t('layout.movements.description') %></th>
										<td class="tc"><%=  I18n.t('layout.movements.amount') %></td>
										<td class="last"><%=  I18n.t('layout.movements.type') %></td>
									</tr>
								</thead>
								<tbody>
								<% @last5movements.each_with_index do |movement,i| %>	
									<tr class="<% if i == 0  %>first<% else %><%= cycle('even', 'odd') %><% end%>" >
										<th class="first"><%=h movement.description %></th>
										<td class="tr"><%=  format_currency(movement.amount) %></td>
										<td ><%=h  movement.type_of_movement %></td>
									</tr>
								<% end %>	
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="box box-100 altbox"><!-- .altbox for alternative box's color -->
					<div class="boxin">
						<div class="header">
							<h3>Movimentos por MÃªs</h3>
						</div>
						<div class="content">
			  			<div >
		 	   				<% str_xml = render "fusioncharts/income_expenditure_by_year.builder",:layout => false,:year_data => @year_data
		        			render_chart '/FusionCharts/FCF_MSColumn2D.swf', '', str_xml, 'SpendingChart', 950, 250, false, false do-%><% end-%>
			  			</div>
			     </div>
			</div>
	</div>
</div>
         
<div class="header">
	<h3><img src="/images/logo_top.png" alt="Phosney" /></h3>
	<ul>
		<li><%= link_to 'Login', login_path  , {:class => "active"} %></li><!-- .active for active tab -->
		<li><%= link_to I18n.t('layout.users.register'), new_account_path %></li>
		<li> <%= link_to I18n.t('layout.users.recoverpassword'), new_password_reset_path%></li>
	</ul>
</div>
<% form_for @user_session, :html => { :class => "basic"}, :url => user_session_path do |f| %>
<div class="inner-form">
	<% if not f.error_messages.blank? %>
  		<div class="msg msg-error">
			<%= f.error_messages  :header_message => nil, :message => nil %>
		</div>
  <% end %>
<dl>
	<dt><%= f.label :login,I18n.t('layout.users.username') %></dt>
	<dd><%= f.text_field :login , :class => 'txt' %></dd>
	<dt><%= f.label :password, I18n.t('layout.users.password')  %></dt>
	<dd><%= f.password_field :password , :class => 'txt' %></dd>
	<dd class="submit">
		<div>
		<%= f.submit 'Login',:class => 'button' %> 
		</div>
	</dd>
</dl>
</div>
<% end %>

      
<% form_for @quick_movement, :url => quickmovement_path do |f| %>
			<div>
			<%= f.label :account_id, I18n.t('layout.bankaccounts.accountname')%>			
			<%= f.collection_select :account_id, current_user.accounts.find(:all, :order => 'name'), :id, :name,  :include_blank => false %>
			</div>
			<div>
			<%= f.label :description, I18n.t('layout.movements.description') %>
			<%= f.text_field :description , :size => 20 %>
			</div>
			<div>
			<%= f.label  :amount, I18n.t('layout.movements.amount') %>
			<%= f.text_field :amount , :size => 10 %>
			</div>
			<div>
			<%= f.label :movdate,  I18n.t('layout.movements.movdate') %>
			<%= f.text_field :movdate,:size => 10 %>
			</div>
			<div>
			<%= f.label :category_id, I18n.t('layout.movements.category') %>
			<%= f.collection_select :category_id, current_user.categories.find(:all, :order => 'name'), :id, :name,  :include_blank => 'None' %>
			</div>
			<div>
			<%= f.label :tag_list, I18n.t('layout.tags.title') %>
			<%= f.text_field :tag_list , :size => 20%>
			</div>
			<div>
			<label>Foi um...</label>
			<div class="fg-buttonset fg-buttonset-single">
				<button class="fg-button ui-state-default ui-priority-primary ui-corner-left"><%=  I18n.t('layout.movements.debit') %></button>
				<button class="fg-button ui-state-default ui-priority-primary ui-corner-right"><%=  I18n.t('layout.movements.credit') %></button>
			</div>
			</div>
		<% end %>
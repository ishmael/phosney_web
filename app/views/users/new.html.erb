<div class="header cr-top ">
	<div id="left-header">	
		<img class="tag" src="/images/logo_top.png" alt="Phosney" />
		<h4 ><%=  I18n.t('layout.application.tag')  %></h4>
	</div>
	<div id="right-header">
		<ul>
			<li><%= link_to 'Login', login_path  , {:class => "cr-top"} %></li>
			<li><%= link_to I18n.t('layout.users.register'), new_account_path, {:class => "active cr-top"}  %></li>
			<li> <%= link_to I18n.t('layout.users.recoverpassword'), new_password_reset_path , {:class => " cr-top"} %></li>
		</ul>
	</div>
</div>
<% form_for @user, :html => { :class => "basic register"}, :url => account_path do |f| %>
<div id="users_div" class="basic cr-bottom">
	<% if not f.error_messages.blank? %>
  		<div class="msg msg-error">
			<%= f.error_messages  :header_message => nil, :message => nil %>
		</div>
  <% end %>
		<dl>
  			<%= render :partial => "form", :object => f %>
			<dd class="submit">
				<div>
				<%= f.submit I18n.t('layout.users.register'),:class => 'phosney-button cr-all' %> 
				</div>
			</dd>
		</dl>
</div>	
</div>
<% end %>
<script type="text/javascript">
var login_text = document.getElementById("user_login").focus();
</script>

<div id="users_div">
<div   class="header">
	<h3><img src="/images/logo_top.png" alt="Phosney" /></h3>
	<h4><%=  I18n.t('layout.application.tag')  %></h4>
	<ul>
		<li><%= link_to 'Login', login_path  %></li><!-- .active for active tab -->
		<li><%= link_to I18n.t('layout.users.register'), new_account_path , {:class => "active"} %></li>
		<li> <%= link_to I18n.t('layout.users.recoverpassword'), new_password_reset_path%></li>
	</ul>
</div>
<% form_for @user, :html => { :class => "basic register"}, :url => account_path do |f| %>
<div  class="inner-form">
	<% if not f.error_messages.blank? %>
  		<div class="msg msg-error">
			<%= f.error_messages  :header_message => nil, :message => nil %>
		</div>
  <% end %>
		<dl>
  			<%= render :partial => "form", :object => f %>
			<dd class="submit">
				<div>
				<%= f.submit I18n.t('layout.users.register'),:class => 'button' %> 
				</div>
			</dd>
		</dl>
</div>	
</div>
<% end %>
